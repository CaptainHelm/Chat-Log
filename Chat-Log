FollowMeDruidPetFilter:
{
	IfInString, TextLine, You tell your party, 'follow me %DruidPet%'
	gosub, DruidPetFollowCharacter1
	
	
	else IfInString, TextLine, %Character2% tells the group, 'follow me %DruidPet%'
		gosub, DruidPetFollowCharacter2
	
	
	else IfInString, TextLine, %Character3% tells the group, 'follow me %DruidPet%'
		gosub, DruidPetFollowCharacter3
	
	
	else IfInString, TextLine, %Character4% tells the group, 'follow me %DruidPet%'
		gosub, DruidPetFollowCharacter4
}

StayHereDruidPetFilter:
{
	IfInString, TextLine, You tell your party, 'stay here %DruidPet%'
	gosub, StayHereDruidPet
	
	
	else IfInString, TextLine, %Character2% tells the group, 'stay here %DruidPet%'
		gosub, StayHereDruidPet
	
	
	else IfInString, TextLine, %Character3% tells the group, 'stay here %DruidPet%'
		gosub, StayHereDruidPet
	
	
	else IfInString, TextLine, %Character4% tells the group, 'stay here %DruidPet%'
		gosub, StayHereDruidPet
}

SitWizardPetFilter:
{
	IfInString, TextLine, You tell your party, 'sit %WizardPet%'
	gosub, SitWizardPet
}

FollowMeWizardPetFilter:
{
	IfInString, TextLine, You tell your party, 'follow me %WizardPet%'
	gosub, WizardPetFollowCharacter1
}

StayHereWizardPetFilter:
{
	IfInString, TextLine, You tell your party, 'stay here %WizardPet%'
	gosub, StayHereWizardPet
}
return
