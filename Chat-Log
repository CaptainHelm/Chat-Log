;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FILTERS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

HealMyTargetFilter:
{
	IfInString, TextLine, You tell your party, 'heal my target'
		gosub, AssistCharacter1Heal
		
		
	else IfInString, TextLine, %Character2% tells the group, 'heal my target'
		gosub, AssistCharacter2Heal
		
		
	else IfInString, TextLine, %Character3% tells the group, 'heal my target'
		gosub, AssistCharacter3Heal
		
		
	else IfInString, TextLine, %Character4% tells the group, 'heal my target'
		gosub, AssistCharacter4Heal
}

HealMeFilter:
{
	IfInString, TextLine, You tell your party, 'heal me'
	gosub, Character1Heal
	
	else IfInString, TextLine, %Character2% tells the group, 'heal me'
		gosub, Character2Heal
	
	else IfInString, TextLine, %Character4% tells the group, 'heal me'
		gosub, Character4Heal
	
	else IfInString, TextLine, %Character3% tells the group, 'heal me'
		gosub, Character3Heal
}
	
HealOtherFilter:
{
	IfInString, TextLine, You tell your party, 'cheal %DruidPet%'
		gosub, DruidPetHeal	
	else IfInString, TextLine, You tell your party, 'cheal %Character4%'
		gosub, Character4Heal			
	else IfInString, TextLine, You tell your party, 'cheal %Character3%'
		gosub, Character3Heal	
	else IfInString, TextLine, You tell your party, 'cheal %Character2%'
		gosub, Character2Heal	

	else IfInString, TextLine, %Character2% tells the group, 'cheal %Character1%'
		gosub, Character1Heal
	else IfInString, TextLine, %Character2% tells the group, 'cheal %Character3%'
		gosub, Character3Heal
	else IfInString, TextLine, %Character2% tells the group, 'cheal %Character4%'
		gosub, Character4Heal
	else IfInString, TextLine, %Character2% tells the group, 'cheal %DruidPet%'
		gosub, DruidPetHeal

	else IfInString, TextLine, %Character3% tells the group, 'cheal %Character1%'
		gosub, Character1Heal
	else IfInString, TextLine, %Character3% tells the group, 'cheal %Character2%'
		gosub, Character2Heal
	else IfInString, TextLine, %Character3% tells the group, 'cheal %Character4%'
		gosub, Character4Heal
	else IfInString, TextLine, %Character3% tells the group, 'cheal %DruidPet%'
		gosub, DruidPetHeal

	else IfInString, TextLine, %Character4% tells the group, 'cheal %Character1%'
		gosub, Character1Heal
	else IfInString, TextLine, %Character4% tells the group, 'cheal %Character3%'
		gosub, Character3Heal
	else IfInString, TextLine, %Character4% tells the group, 'cheal %Character2%'
		gosub, Character2Heal
	else IfInString, TextLine, %Character4% tells the group, 'cheal %DruidPet%'
		gosub, DruidPetHeal
}

SowOtherFilter:
{
	IfInString, TextLine, You tell your party, 'csow %DruidPet%'
	gosub, DruidPetSow	
	else IfInString, TextLine, You tell your party, 'csow %Character4%'
		gosub, Character4Sow		
	else IfInString, TextLine, You tell your party, 'csow %Character3%'
		gosub, Character3Sow	
	else IfInString, TextLine, You tell your party, 'csow %Character2%'
		gosub, Character2Sow
	
	else IfInString, TextLine, %Character2% tells the group, 'csow %Character1%'
		gosub, Character1Sow
	else IfInString, TextLine, %Character2% tells the group, 'csow %Character3%'
		gosub, Character3Sow
	else IfInString, TextLine, %Character2% tells the group, 'csow %Character4%'
		gosub, Character4Sow
	else IfInString, TextLine, %Character2% tells the group, 'csow %DruidPet%'
		gosub, DruidPetSow
	
	else IfInString, TextLine, %Character3% tells the group, 'csow %Character1%'
		gosub, Character1Sow
	else IfInString, TextLine, %Character3% tells the group, 'csow %Character2%'
		gosub, Character2Sow
	else IfInString, TextLine, %Character3% tells the group, 'csow %Character4%'
		gosub, Character4Sow
	else IfInString, TextLine, %Character3% tells the group, 'csow %DruidPet%'
		gosub, DruidPetSow
	
	else IfInString, TextLine, %Character4% tells the group, 'csow %Character1%'
		gosub, Character1Sow
	else IfInString, TextLine, %Character4% tells the group, 'csow %Character3%'
		gosub, Character3Sow
	else IfInString, TextLine, %Character4% tells the group, 'csow %Character2%'
		gosub, Character2Sow
	else IfInString, TextLine, %Character4% tells the group, 'csow %DruidPet%'
		gosub, DruidPetSow	
}

SowMeFilter:
{
	IfInString, TextLine, You tell your party, 'sow me'
