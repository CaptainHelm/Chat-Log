#NoEnv  ; Recommended for performance and compatibility with future AutoHotkey releases.
; #Warn  ; Enable warnings to assist with detecting common errors.
SendMode Input  ; Recommended for new scripts due to its superior speed and reliability.
SetWorkingDir %A_ScriptDir%  ; Ensures a consistent starting directory.

Character1 = Helmet
Character2 = Slippers
Character3 = Gloves
Character4 = Leggings
Character5 = TBA
DruidPet = Boots
WizardPet = Slippers

CharacterClient = ahk_pid 74008 ;%CharacterClient%
CharacterClient2 = ahk_pid 77448

FilePath := A_ScriptDir "\eqlog_Helmet_yelinak.txt" 
File := FileOpen(FilePath, "r")
OldLogFileSize := 0
File.Seek(0, 2) 

Loop
{
	LogFileSize := File.Length
	if (LogFileSize > OldLogFileSize)
	{
		Loop
		{
			if File.AtEOF
				Break
			TextLine := File.Readline()
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Start DRUID ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~				
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ General Commands ~~~~~~~~~~~~~~~~~~~~~~~~~~	
			IfInString, TextLine, sit %DruidPet%
			{
				gosub SitDruidPetFilter	
			}	
			
			IfInString, TextLine, follow me %DruidPet%
			{
				gosub FollowMeDruidPetFilter	
			}
			
			IfInString, TextLine, stay here %DruidPet%
			{
				gosub StayHereDruidPetFilter	
			}
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~				
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Healing ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
			IfInString, TextLine, heal me
			{
				gosub HealMeFilter	
			}
			
			IfInString, TextLine, cheal
			{
				gosub HealOtherFilter	
			}	
			
			IfInString, TextLine, heal my target
			{
				gosub HealMyTargetFilter	
			}
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~			
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Buffs ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
			
			IfInString, TextLine, sow me
			{
				gosub SowMeFilter	
			}		
			
			IfInString, TextLine, csow
			{
				gosub, SowOtherFilter
			}
			
			IfInString, TextLine, sow my target
			{
				gosub SowMyTargetFilter	
			}
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~			
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Offense ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
			
			IfInString, TextLine, %DruidPet% nuke my target
			{
				gosub DruidPetNukeMyTargetFilter
			}		
			
			IfInString, TextLine, dot my target
			{
				gosub DotMyTargetFilter
			}				
			
			IfInString, TextLine, snare my target
			{
				gosub SnareMyTargetFilter
			}				
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~				
			
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Wizard Start ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
			
			IfInString, TextLine, %WizardPet% nuke my target
			{
				gosub WizardPetNukeMyTargetFilter
			}				
			
			IfInString, TextLine, sit %WizardPet%
			{
				gosub SitWizardPetFilter	
			}	
			
			IfInString, TextLine, follow me %WizardPet%
			{
				gosub FollowMeWizardPetFilter	
			}
			
			IfInString, TextLine, stay here %WizardPet%
			{
				gosub StayHereWizardPetFilter	
			}
			
			
			
			
			
			
			
			
			
		}
		OldLogFileSize := LogFileSize
	}
	Sleep, 1
}
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Commands ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
DruidPetHeal:
{
	controlsend,,{altdown}1, %CharacterClient%
	sleep 1
	controlsend,,{altup}, %CharacterClient%
	sleep 5
	return
}

